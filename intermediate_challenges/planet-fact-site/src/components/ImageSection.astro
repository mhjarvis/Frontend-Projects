---
import { Image } from "astro:assets";
import MercuryImage from "../images/planet-mercury.svg";
---

<figure class="image-container">
	<Image
		src={MercuryImage}
		alt="Image of planet Mercury"
		class="mercury-image"
	/>
</figure>

<style>
	.image-container {
		height: 31rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	.mercury-image {
		height: 11.1rem;
		width: 11.1rem;
	}
</style>
