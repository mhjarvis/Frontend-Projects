---
import { Image } from "astro:assets"
import Hamburger from "/public/images/icon-hamburger.svg"
import Menu from "./Menu.astro"
import NormalMenu from "./NormalMenu.astro"
---

<nav class="nav-container">
	<div class="navigation">
		<h1 class="heading">THE PLANETS</h1>
		<Image src={Hamburger} alt="testing..." class="hamburger" id="hamburger" />
	</div>
	<Menu />
	<NormalMenu />
</nav>

<style>
	.nav-container {
		width: 100%;
		max-width: 1440px;
	}

	.navigation {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		margin: 1.6rem 2.4rem;
	}

	.heading {
		font-size: 2.8rem;
	}

	.hamburger {
		width: 2.4rem;
		height: 1.7rem;
		cursor: pointer;
	}

	@media screen and (min-width: 768px) {
		.nav-container {
			display: flex;
			flex-direction: column;
			align-items: center;
		}
		.navigation {
			flex-direction: column;
		}

		.hamburger {
			display: none;
		}
	}

	@media screen and (min-width: 1024px) {
		.nav-container {
			display: flex;
			align-items: center;
			justify-content: space-between;
		}
	}
</style>
